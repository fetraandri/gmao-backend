generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Equipment {
  id            Int            @id @default(autoincrement())
  name          String
  type          String
  status        String
  interventions Intervention[] @relation("EquipmentToIntervention") // Nom de la relation
}

model Intervention {
  id          Int       @id @default(autoincrement())
  equipmentId Int
  description String
  date        DateTime
  status      String
  equipment   Equipment @relation("EquipmentToIntervention", fields: [equipmentId], references: [id])
}

model Maintenance {
  id          Int      @id @default(autoincrement())
  equipmentId Int
  details     String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
